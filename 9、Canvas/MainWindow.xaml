<Window x:Class="_9_Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_9_Canvas"
        mc:Ignorable="d"
        Title="9、Canvas布局" Height="450" Width="800">
    <Grid >
        <Canvas>
            <TextBlock Width="780" Canvas.Top="10" Canvas.Left="10" FontSize="16" Text="Canvas是一个类似于坐标系的面板，所有的元素通过设置坐标来决定其在坐标系中的位置。具体表现为使用Left、Top、Right、 Bottom附加属性在Canvas中定位控件。" TextAlignment="Left" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap"></TextBlock>
            <Rectangle Fill="Red" Height="100" Width="100" Canvas.Top="100" Canvas.Left="100" />
            <Rectangle Fill="Green" Height="100" Width="100" Canvas.Top="200" Canvas.Left="200" />
            <Rectangle Fill="Blue" Height="100" Width="100" Canvas.Top="300" Canvas.Left="300" />
        </Canvas>
    </Grid>
</Window>
