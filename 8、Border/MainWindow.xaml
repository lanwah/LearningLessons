<Window x:Class="_8_Border.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8_Border"
        mc:Ignorable="d"
        Title="8、Border布局" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>
    <Grid>

        <Border BorderBrush="Red" BorderThickness="2" CornerRadius="5" Margin="10">
            <StackPanel>
                <TextBlock Text="BorderBrush: 边框色 ；">
                </TextBlock>
                <TextBlock Text="BorderThickness: 边框宽度；">
                </TextBlock>
                <TextBlock Text="CornerRadius: 各个角 圆的半径；">
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
